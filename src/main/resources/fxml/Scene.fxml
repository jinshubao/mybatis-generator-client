<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jean.mybatis.generator.controller.MainController">
    <top>
        <VBox>
            <children>
                <MenuBar BorderPane.alignment="CENTER">
                    <menus>
                        <Menu mnemonicParsing="false" text="文件">
                            <items>
                                <MenuItem fx:id="newConnectionItem" mnemonicParsing="false" text="新建连接" />
                                <MenuItem fx:id="closeMenuItem" mnemonicParsing="false" text="退出" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="查看">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Delete" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="收藏夹">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="工具">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="窗口">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="帮助">
                            <items>
                                <MenuItem mnemonicParsing="false" text="About" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <HBox alignment="CENTER_LEFT" maxHeight="80.0" minHeight="80.0" prefHeight="80.0" spacing="10.0" style="-fx-border-color: #999;" VBox.vgrow="NEVER">
                    <children>

                        <ToggleButton fx:id="user" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="用户">
                            <toggleGroup>
                                <ToggleGroup fx:id="topbuttons" />
                            </toggleGroup>
                        </ToggleButton>

                        <ToggleButton fx:id="table" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="表" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="view" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="视图" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="function" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="函数" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="event" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="事件" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="select" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="查询" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="report" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="报表" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="backup" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="备份" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="plan" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="计划" toggleGroup="$topbuttons" />
                        <ToggleButton fx:id="model" mnemonicParsing="false" prefHeight="60.0" prefWidth="85.0" style="-fx-background-radius: 10;" text="模型" toggleGroup="$topbuttons" />
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="CENTER" maxHeight="30.0" minHeight="30.0" prefHeight="30.0" style="-fx-border-color: #999;" BorderPane.alignment="CENTER_LEFT">
            <children>
            <ProgressIndicator fx:id="progressIndicator" />
                <Label fx:id="message" text="--" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </bottom>
    <center>
        <SplitPane fx:id="splitPane" dividerPositions="0.2" nodeOrientation="LEFT_TO_RIGHT" BorderPane.alignment="CENTER">
            <items>
                <TreeView fx:id="databaseSchemaView" />
            <TableView fx:id="databaseTableView">
              <columns>
                <TableColumn prefWidth="75.0" text="NAME" />
                <TableColumn prefWidth="75.0" text="TYPE" />
                  <TableColumn prefWidth="75.0" text="COMMENT" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            </items>
        </SplitPane>
    </center>
</BorderPane>
